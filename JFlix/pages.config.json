{
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "framework": "nextjs",
  "routes": [
    {
      "pattern": "/movies/:id*",
      "destination": "/movies/[id].html"
    },
    {
      "pattern": "/movies/:id*/watch",
      "destination": "/movies/[id]/watch.html"
    },
    {
      "pattern": "/tvshows/:id*",
      "destination": "/tvshows/[id].html"
    },
    {
      "pattern": "/tvshows/:id*/watch",
      "destination": "/tvshows/[id]/watch.html"
    },
    {
      "pattern": "/search",
      "destination": "/search.html"
    },
    {
      "pattern": "/*",
      "destination": "/:splat.html"
    }
  ],
  "headers": {
    "/*": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    },
    "/assets/*": {
      "Cache-Control": "public, max-age=31536000, immutable"
    },
    "/images/*": {
      "Cache-Control": "public, max-age=31536000, immutable"
    }
  }
}
